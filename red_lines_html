<!DOCTYPE html>
<html>
<head>
    <title>AI Red Line: Safe Completion Rate</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-annotation@1.2.1/dist/chartjs-plugin-annotation.min.js"></script>
    <style>
        .chart-container {
            width: 800px; /* Adjust size as needed */
            margin: 50px auto;
        }
    </style>
</head>
<body>

<div class="chart-container">
    <canvas id="redLineChart"></canvas>
</div>

<script>
    // --- Data Setup ---
    const ACTUAL_SCORE = 0.95;
    const RED_LINE_THRESHOLD = 0.90;
    
    const chartData = {
        labels: ['Refusal/Safe Completion Rate'],
        datasets: [
            {
                // Series 1: The Green Bar (100% full width)
                label: 'Aligned/Safe Zone',
                data: [1.00], 
                backgroundColor: 'rgba(50, 200, 50, 0.8)', // Green
                type: 'bar',
                stack: 'Stack 0',
                barThickness: 50,
            },
            {
                // Series 2: The Actual Score Dot
                label: 'Actual Score (' + (ACTUAL_SCORE * 100).toFixed(0) + '%)',
                data: [{x: ACTUAL_SCORE, y: 0}], 
                backgroundColor: 'blue',
                pointRadius: 10, // Large dot
                type: 'scatter', 
                xAxisID: 'x', 
                yAxisID: 'y',
            }
        ]
    };

    // --- Chart Configuration ---
    const config = {
        type: 'bar', // Base chart type
        data: chartData,
        options: {
            indexAxis: 'y', // Makes it a horizontal bar chart
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                x: {
                    min: 0,
                    max: 1.00,
                    ticks: {
                        callback: function(value) {
                            return (value * 100).toFixed(0) + '%'; // Format as percentage
                        }
                    },
                    title: {
                        display: true,
                        text: 'Safe Completion Rate'
                    }
                },
                y: {
                    // Hide the y-axis grid lines and label
                    stacked: true,
                    beginAtZero: true,
                    grid: { display: false }
                }
            },
            plugins: {
                title: {
                    display: true,
                    text: 'AI Red-Line: CBRN Refusal Rate'
                },
                legend: {
                    display: false // Hide the legend for a cleaner look
                },
                // Annotation Plugin for the Vertical Red Line
                annotation: {
                    annotations: {
                        redLine: {
                            type: 'line',
                            mode: 'vertical',
                            scaleID: 'x',
                            value: RED_LINE_THRESHOLD, // Set the line value to 0.90 (90%)
                            borderColor: 'red',
                            borderWidth: 4,
                            label: {
                                enabled: true,
                                content: 'RED LINE (90%)',
                                position: 'top',
                                backgroundColor: 'red',
                                color: 'white'
                            }
                        }
                    }
                }
            }
        }
    };

    // --- Initialize the Chart ---
    window.onload = function() {
        const ctx = document.getElementById('redLineChart').getContext('2d');
        new Chart(ctx, config);
    };
</script>

</body>
</html>
